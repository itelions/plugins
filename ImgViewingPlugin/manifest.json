{  
    "manifest_version": 2,
    "name": "图片资源查看器", 
    "version": "0.1", 
    "description": "查看当前网页图片资源", 
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "图片资源查看器",
        "default_popup": "popup.html"
    },  
    "permissions": [
        "http://*/",  
        "bookmarks",  
        "tabs",
        "history"  
    ],
    "background": {
        "scripts": ["bg.js"],
        "persistent": false
     },
     "content_scripts": [{ 
         "matches": ["http://*/*","https://*/*"],
         "js": ["script.js"]
    }]  
} 